<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
        <p>
        <%= artist.name %>
        -
        <%= link_to 'Show', artist %>
        -
        <%= link_to 'Edit', edit_artist_path(artist) %>
        -
        <%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %>
        <p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
